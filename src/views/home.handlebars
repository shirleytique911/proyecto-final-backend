<h1>ESTE ES EL HOME USUARIO</h1>
<h3>Bienvenido! {{user.first_name}}</h3>
<h4>Sesi칩n iniciada de usuario <p id="correo">{{user.email}}</p></h4>
<button id="logoutButton">Cerrar Sesi칩n</button> <br><br>
<a href="/carts/{{cartId}}?email={{user.email}}">Ver Carrito</a> <br><br>
<div class="container">
    <div class="infoProd">
        <h1>Lista de Productos</h1>
        <div class="detalleProd">
            <div id="productsContainer">
                <ul>
                    {{#each products}}
                    <li>
                        <strong>{{this.description}}</strong><br>
                        Price: ${{this.price}}<br>
                        Stock: {{this.stock}}<br>
                        Category: {{this.category}}<br>
                        <a href="/products/{{this._id}}?email={{../user.email}}">Ver Detalle</a>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    <div class="formulario">
        <h1>Formulario Contactanos(CHAT)</h1>
        <form id="email-form">
            <input type="hidden" id="productId" name="productId">
            <div class="inputs">
                <div>
                    <input type="email" id="email" autocomplete="off" placeholder="Ingrese Correo" required>
                </div>
                <div>
                    <textarea id="com" autocomplete="off" placeholder="Ingrese Comentario" required rows="4"
                        cols="50"></textarea>
                </div>
            </div>
            <div class="botones">
                <button type="submit" id="btnCorreo">Enviar</button>
            </div>
        </form>
    </div>
</div>

<script>  
    document.getElementById('logoutButton').addEventListener('click', cerrarSesion);
    function cerrarSesion() {
        localStorage.removeItem("token");
        var userEmail = "{{user.email}}";
        // Redirigir a la p치gina de logout con el correo como par치metro
        window.location.href = '/logout?email=' + userEmail;
    }
</script>
<script src="/socket.io/socket.io.js"></script>
<script src="/user.js"></script>